@model AsbaBank.Domain.Models.Client

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="well">
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Model.Id
        </dd>

        <dt>
            Client Name
        </dt>
        <dd>
            @Model.ClientName
        </dd>
        
        <dt>
            Phone Number
        </dt>
        <dd>
            @Model.PhoneNumber
        </dd>

        <dt>
             Street Number
         </dt>
        <dd>
            @Model.Address.StreetNumber
        </dd>

        <dt>
            Street
        </dt>
        <dd>
            @Model.Address.Street
        </dd>

        <dt>
            City
        </dt>
        <dd>
            @Model.Address.City
        </dd>

        <dt>
            Postal Code
        </dt>
        <dd>
            @Model.Address.PostalCode
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
