@model AsbaBank.Presentation.Mvc.ViewModels.AccountDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="well">
    <dl class="dl-horizontal">
        <dt>
            Account Number
        </dt>
        <dd>
            @Model.AccountNumber
        </dd>
        
        <dt>
            Client
        </dt>
        <dd>
            @Model.ClientName
        </dd>       

        <dt>
            Balance
        </dt>
        <dd>
            @Model.Balance
        </dd>

        <dt>
            Status
        </dt>
        <dd>
            @Model.Status
        </dd>
    </dl>
</div>

<h2>Transaction History</h2>

<div class="well">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Date
            </th>
            <th>
                Amount
            </th>
        </tr>

        @foreach (var item in Model.Ledger)
        {
            <tr>
                <td>
                    @item.TransactionDate.ToString("yyyy/MM/dd H:mm:ss")
                </td>
                <td>
                    @item.TransactionAmount.ToString("C")
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
