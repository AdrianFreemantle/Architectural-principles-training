@model IEnumerable<AsbaBank.Presentation.Mvc.ViewModels.BankCardViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped">
    <tr>
        <th>
            Id
        </th>
        <th>
            Account Number
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.AccountNumber
        </td>
        <td>
            @item.Status
        </td>
        <td>
            @if (!item.Disabled)
            {
                @Html.ActionLink("Disable", "Disable", new { id = item.Id });
            }
        </td>
    </tr>
}

</table>
